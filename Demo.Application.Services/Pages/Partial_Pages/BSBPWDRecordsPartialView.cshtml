@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Edocs.Demo.Application.Services.Pages.Partial_Pages.BSBPWDRecordsPartialViewModel
@{
    Layout = null;
}
<p class="p-1"></p>
<div class="container-fluid text-center">
    @if((@Model.PNames != null) && (@Model.PNames.Count > 0))
            {

            
    <table id="tblFiles" class="table table-hover w-auto table-bordered table-info" style="margin-left:auto;margin-right:auto;">
        <thead>
            <tr>

                <th style="width:auto">Document</th>
                <th style="width:auto">View Document</th>
                <th style="width:auto">Department</th>
                <th style="width:auto">Year</th>
                <th style="width:auto">Project Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.PNames)
            { 
            <tr onmouseover="$(this).css('background','white');" onmouseout="$(this).css('background','#7abdff');">

                <td class="CellWithComment">
                    <a href="/Partial_Pages/DisplayPdfFilePartialView?pdfurl=@item.Value.FileUrl" target="_blank"> <img src="~/img/icpdf.gif" width="20" height="25" /></a>
                </td>
                <td style="width:auto"><a href="javascript:LoadPdf('@item.Value.ProdFileName');">View</a></td>
                <td>@item.Value.ProjectDepartment</td>
                <td>@item.Value.ProjectYear</td>
                <td>@item.Value.ProjectName</td>
            </tr>
                    }

</tbody>
    </table>
    }
</div>


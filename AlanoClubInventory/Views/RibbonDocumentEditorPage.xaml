<Page x:Class="AlanoClubInventory.Views.RibbonDocumentEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlanoClubInventory.Views"
     xmlns:fluent="urn:fluent-ribbon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RibbonDocumentEditorPage">

    <Grid>
        <DockPanel>
            <!-- Ribbon -->
            <fluent:Ribbon DockPanel.Dock="Top">
                <!-- Home Tab -->
                <fluent:RibbonTabItem Header="Home">
                    <fluent:RibbonGroupBox Header="Clipboard">
                        <fluent:Button Command="ApplicationCommands.Cut" Icon="Cut"/>
                        <fluent:Button Command="ApplicationCommands.Copy" Icon="Copy"/>
                        <fluent:Button Command="ApplicationCommands.Paste" Icon="Paste"/>
                    </fluent:RibbonGroupBox>

                    <fluent:RibbonGroupBox Header="Font">
                        <fluent:Button Command="EditingCommands.ToggleBold" Icon="Bold"/>
                        <fluent:Button Command="EditingCommands.ToggleItalic" Icon="Italic"/>
                        <fluent:Button Command="EditingCommands.ToggleUnderline" Icon="Underline"/>
                    </fluent:RibbonGroupBox>

                    <fluent:RibbonGroupBox Header="Paragraph">
                        <fluent:Button Command="EditingCommands.AlignLeft" Icon="AlignLeft"/>
                        <fluent:Button Command="EditingCommands.AlignCenter" Icon="AlignCenter"/>
                        <fluent:Button Command="EditingCommands.AlignRight" Icon="AlignRight"/>
                    </fluent:RibbonGroupBox>
                </fluent:RibbonTabItem>

                <!-- Insert Tab -->
                <fluent:RibbonTabItem Header="Insert">
                    <fluent:RibbonGroupBox Header="Elements">
                        <fluent:Button Content="Picture"/>
                        <fluent:Button Content="Table"/>
                        <fluent:Button Content="Emoji"/>
                    </fluent:RibbonGroupBox>
                </fluent:RibbonTabItem>

                <!-- View Tab -->
                <fluent:RibbonTabItem Header="View">
                    <fluent:RibbonGroupBox Header="Zoom">
                        <fluent:Button Content="Zoom In"/>
                        <fluent:Button Content="Zoom Out"/>
                    </fluent:RibbonGroupBox>
                </fluent:RibbonTabItem>
            </fluent:Ribbon>

            <!-- Editor -->
            <RichTextBox Name="Editor" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </DockPanel>

    </Grid>
</Page>

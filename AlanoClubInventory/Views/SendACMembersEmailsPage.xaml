            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">


                <ToggleButton x:Name="DropDownButton" Content="{Binding SelectedMembers}"  HorizontalAlignment="Center" Width="250"/>
                <Popup IsOpen="{Binding IsChecked, ElementName=DropDownButton}"
           PlacementTarget="{Binding ElementName=DropDownButton}"
           StaysOpen="False">

                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Exit"  Click="BtnExit" Cursor="Hand" Margin="10">
                                <MenuItem.Icon>
                                    <Image Source="/Resources/Images/exit.png"  Width="30" Height="30"/>
                                </MenuItem.Icon>
                            </MenuItem>

                        </MenuItem>

                    </Menu>
                    <Menu VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8">
                        <MenuItem Header="Insert" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <MenuItem Header="Inset File Picture"  Cursor="Hand"  Click="BtnInsertImage"  Margin="10">
                                <MenuItem.Icon>
                                    <Image Source="/Resources/Images/add.png" Width="30" Height="30"/>
                                </MenuItem.Icon>

                            </MenuItem>

                            <MenuItem Header="Inset Table"  Cursor="Hand"  Click="BtnInsertTable" Margin="10">
                                <MenuItem.Icon>
                                    <Image Source="/Resources/Images/table (1).png" Width="30" Height="30" />
                                </MenuItem.Icon>

                            </MenuItem>
                        </MenuItem>
                    </Menu>

                 

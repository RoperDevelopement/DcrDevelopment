                            <ContextMenu ItemsSource="{Binding ButtonMenuItems}" Width="300" Height="100" Background="GhostWhite"  Visibility="{Binding IsContMenuVis, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ContextMenu.Resources>
                                    
                                    <HierarchicalDataTemplate DataType="{x:Type vmitems:MenuItemModel}" ItemsSource="{Binding ButtonMenuItems}">
                            <MenuItem Header="{Binding Header}" Command="{Binding Command}" CommandParameter="{Binding CommandParameter}" />
                                    </HierarchicalDataTemplate>
                                   

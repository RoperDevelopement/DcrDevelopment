                    <ComboBox x:Name="FontFamilyCombo" Width="150" Margin="2,0,0,0"
                  SelectionChanged="FontFamilyCombo_SelectionChanged">
                        <ComboBoxItem>Arial</ComboBoxItem>
                        <ComboBoxItem>Calibri</ComboBoxItem>
                        <ComboBoxItem>Times New Roman</ComboBoxItem>
                        <ComboBoxItem>Verdana</ComboBoxItem>
                    </ComboBox>

                    <!-- Font size -->
                    <ComboBox x:Name="FontSizeCombo" Width="60" Margin="2,0,0,0"
                  SelectionChanged="FontSizeCombo_SelectionChanged">

<Page x:Class="AlanoClubInventory.Views.AddEditProductPricesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlanoClubInventory.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Background="{DynamicResource ControlFillColorDefault}"
      
      Title="Alano CLub Products Prices">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            Padding="10">
       

            <Grid Margin="10,0,10,10" VerticalAlignment="Top"  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4">
                <DockPanel Background="{DynamicResource MenuItems}"  Cursor="Hand" >
                    <Menu  BorderBrush="DarkBlue" >

                        <MenuItem Header="Prices"  Click="Prices" FontSize="12">
                            <MenuItem Header="Reload Page"  Click="Prices" FontSize="12" Cursor="Hand"/>
                        </MenuItem>
                        <MenuItem Header="Inventory"   FontSize="12">
                            <MenuItem Header="Bar Items"  Click="InventoryPage" Cursor="Hand"/>
                            <MenuItem Header="UpDate Inventory"  Click="UpDateInventory" Cursor="Hand"/>
                            <MenuItem Header="Other Products"  Click="OtherProd" FontSize="12" Cursor="Hand"/>
                            <MenuItem Header="Categories"  Click="Categories" FontSize="12" Cursor="Hand" />
                        </MenuItem>



                        <MenuItem Header="Till"  Click="Till"  FontSize="12" Cursor="Hand">
                            <MenuItem Header="Daily Till Sales" Click="Till" FontSize="12" Cursor="Hand"/>
                        </MenuItem>
                        <MenuItem Header="Reports"    FontSize="12">
                            <MenuItem Header="Stwert Reports"  Click="Reports"  FontSize="12"/>
                        </MenuItem>

                        <MenuItem Header="Go Back"  Click="GoBack"  FontSize="12"/>
                    </Menu>

                </DockPanel>
            </StackPanel>
               
            <TextBlock x:Name="textBlock" Grid.Column="2" Grid.ColumnSpan="4"  Margin="0,10,0,0" TextWrapping="Wrap" Text="Alano CLub Prices" VerticalAlignment="Top" Padding="10"  HorizontalAlignment="Center" Grid.Row="1"/>
                
                    <Label Content="Category: " Grid.Column="2" Grid.Row="2"  VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding CategoryName}" FontWeight="Bold" Margin="1,0,0,0" Grid.Column="4" Grid.Row="2" 
                         VerticalAlignment="Center" Width="250" HorizontalAlignment="Center" Foreground="Gray" />

                    <Label Content="Product Name: " Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" Margin="5,0,0,0"  HorizontalAlignment="Right" />
                    <TextBlock Text="{Binding ProductName}" Foreground="Gray"   Grid.Column="4" Grid.Row="3" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250"  FontWeight="Bold"   />

                    <Label Content="Member Price: " Grid.Column="2" VerticalAlignment="Center" Grid.Row="4" Margin="5,0,0,0"  HorizontalAlignment="Right"/>
                    <TextBox   Text="{Binding ClubPrice}" Grid.Column="4" Grid.Row="4" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" Width="150" HorizontalAlignment="Left" IsEnabled="{Binding IsTextEnable,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxClubPriceGotFocus" LostFocus="TextBoxClubPriceLostFocus"/>

                    <Label Content="Non Member Price:" Grid.Column="2" VerticalAlignment="Center" Grid.Row="5" Margin="5,0,0,0"  HorizontalAlignment="Right"/>
                    <TextBox Text="{Binding ClubNonMemberPrice,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="5" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" Width="150" HorizontalAlignment="Left" IsEnabled="{Binding IsTextEnable,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxClubPriceGotFocus" LostFocus="TextBoxClubPriceLostFocus" />

                    <Button Grid.Column="3" Grid.Row="7" Content="UpDate" VerticalAlignment="Center" HorizontalAlignment="Left"
      Command="{Binding AddNewClubPrice,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsTextEnable,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,15,0"  Background="DeepSkyBlue"  Foreground="White" BorderBrush="DarkBlue"  BorderThickness="2"
                Cursor="Hand" />
                
                <DataGrid     Grid.Row="9" Grid.Column="0"  Grid.ColumnSpan="5" x:Name="dataGrid"  AutoGenerateColumns="False" HorizontalAlignment="Right" VerticalAlignment="Top" 
   ItemsSource="{Binding Products}" Margin="24,17,0,0" SelectedItem="{Binding SelectedItem, Mode=TwoWay}"  
     GridLinesVisibility="All" SelectionUnit="FullRow"  IsReadOnly="True" CanUserAddRows="False" CanUserSortColumns="True" Padding="10" CanUserDeleteRows="False"  SelectionMode="Extended"  
                               ScrollViewer.CanContentScroll="True"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              >
                 <!--   <DataGrid.RenderTransform>
                        <RotateTransform Angle="90"/>
                    </DataGrid.RenderTransform>
                    -->
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="LightGoldenrodYellow"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.RowStyleSelector>
                        <StyleSelector/>
                    </DataGrid.RowStyleSelector>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="10"/>
                            
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Visibility="Hidden" Width="SizeToCells"/>
                        <DataGridTemplateColumn Header="Bar Item">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding BarItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Categoty" Binding="{Binding CategoryName}"  Width="SizeToCells" />
                        <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="SizeToCells"/>
                        <DataGridTextColumn Header="Club Price" Binding="{Binding ClubPrice,StringFormat='Price {0:C2}'}" Width="SizeToCells"/>
                        <DataGridTextColumn Header="Club Non Member Price" Binding="{Binding ClubNonMemberPrice,StringFormat='Price {0:C2}'}" Width="SizeToCells"/>

                        <DataGridTemplateColumn Width="SizeToCells">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="UpDate Price" Background="LightYellow"
                           Command="{Binding DataContext.UpDatePrices,RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                   CommandParameter="{Binding ElementName=dataGrid}" Foreground="Black" BorderBrush="DarkBlue"  BorderThickness="2"
                Cursor="Hand" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                      




                    </DataGrid.Columns>
                </DataGrid>
       
               

            </Grid>
             
    </ScrollViewer>   
</Page>

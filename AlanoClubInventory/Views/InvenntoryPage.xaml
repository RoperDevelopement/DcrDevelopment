<Page x:Class="AlanoClubInventory.Views.InvenntoryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlanoClubInventory.Views"
        mc:Ignorable="d"
       Background="{DynamicResource ControlFillColorDefault}"
      
        Title="Alano CLub Production Inventory"  d:DesignHeight="350" d:DesignWidth="500">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Auto"
              Padding="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <DockPanel Background="{DynamicResource MenuItems}"  Cursor="Hand" >
                <Menu BorderBrush="DarkBlue" >

                    <MenuItem Header="Exit"  Click="GoBack"  FontSize="12"/>
                </Menu>

            </DockPanel>

            <Grid Margin="10,0,10,10" VerticalAlignment="Top"  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
              
                <TextBlock x:Name="textBlock" Grid.Column="2" Grid.ColumnSpan="4"  Margin="0,10,0,0" TextWrapping="Wrap" Text="Alano CLub Production Inventory" VerticalAlignment="Top" Padding="10"  HorizontalAlignment="Center"/>

                <ComboBox  ItemsSource="{Binding ItemsList}"
          SelectedItem="{Binding  ItemsListCategoryID, Mode=TwoWay}" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1"  >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Label }" FontSize="20" Margin="0,0,10,0"/>

                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Label Content="Product Name:" Grid.Column="0" Grid.Row="2"  VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox Text="{Binding ProductName}" FontWeight="Bold" Margin="1,0,0,0" Grid.Column="1" Grid.Row="2"  VerticalAlignment="Center" Width="300"/>

                <Label Content="Product Price:" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="5,0,0,0"  HorizontalAlignment="Right" />
                <TextBox Text="{Binding Price}" Foreground="Gray" Grid.Column="3" Grid.Row="3" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" />
                <Label Content="Items Per Case:" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Margin="5,0,0,0"  HorizontalAlignment="Right" />
                <TextBox Text="{Binding ItemsPerCase}" Foreground="Gray" Grid.Column="3" Grid.Row="4" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" />
                <Label Content="Product Total:" Grid.Column="0" VerticalAlignment="Center" Grid.Row="5" Margin="5,0,0,0"  HorizontalAlignment="Right"/>
                <TextBox Text="{Binding TotalOnHand}" Grid.Column="3" Grid.Row="5" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" Width="50"/>
                <Label Content="Inventory Item:" Grid.Column="0" VerticalAlignment="Center" Grid.Row="6" Margin="5,0,0,0"  HorizontalAlignment="Right"/>
                <CheckBox IsChecked="{Binding InventoryItem}" Grid.Column="3" Grid.Row="6" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" Width="50"/>
                <Button Grid.Column="2" Grid.Row="8" Content="Add Edit" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Command="{Binding AddInventory}" Background="DeepSkyBlue"  Foreground="White" BorderBrush="DarkBlue"  BorderThickness="2"
                Cursor="Hand"/>

                <DataGrid     Grid.Row="10" Grid.Column="0"  Grid.ColumnSpan="5" x:Name="dataGrid"  AutoGenerateColumns="False" HorizontalAlignment="Right" VerticalAlignment="Top" 
   ItemsSource="{Binding CurrentInv}" Margin="24,17,0,0" SelectedItem="{Binding SelectedItem, Mode=TwoWay}"  
     GridLinesVisibility="All" SelectionUnit="FullRow"  IsReadOnly="True" CanUserAddRows="False" CanUserSortColumns="True" Padding="10" CanUserDeleteRows="False"  SelectionMode="Extended"  >
                    <DataGrid.RowStyleSelector>
                        <StyleSelector/>
                    </DataGrid.RowStyleSelector>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="10"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Visibility="Hidden" Width="SizeToCells"/>
                        <DataGridTextColumn Header="Category  Name" Binding="{Binding CategoryName}"  Width="SizeToCells" />
                        <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="SizeToCells"/>
                        <DataGridTemplateColumn Header="Inventory Item">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding InventoryItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="SizeToCells"/>
                        <DataGridTextColumn Header="Quanity" Binding="{Binding Quantity}" Width="SizeToCells"/>
                        <DataGridTextColumn Header="Items Per Case" Binding="{Binding ItemsPerCase}" Width="SizeToHeader"/>
                        
                        <DataGridTemplateColumn Width="SizeToCells">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edit" Background="Yellow"
                           Command="{Binding DataContext.EditProductName,RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                   CommandParameter="{Binding ElementName=dataGrid}"
                                 Foreground="Black"  BorderBrush="DarkBlue"  BorderThickness="2" Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="SizeToCells">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete" Background="Red"
                  Command="{Binding DataContext.DeleteInventory,RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="{Binding ElementName=dataGrid}"  Foreground="White" BorderBrush="DarkBlue"  BorderThickness="2"
                Cursor="Hand"/>


                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>




                    </DataGrid.Columns>
                </DataGrid>
                <!-- People list
        <Border Grid.Column="0" Grid.Row="0" Height="35" Padding="5" Background="#4E87D4">
            <Label VerticalAlignment="Center" Foreground="White">Names</Label>
        </Border>
         -->


            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>

<Page x:Class="AlanoClubInventory.Views.AlanoClubDashBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlanoClubInventory.Views"
      mc:Ignorable="d" 
      xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlanoClubDashBoardPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
      HorizontalScrollBarVisibility="Auto"
      Padding="10">
        <Grid Margin="10,0,10,10" VerticalAlignment="Top"  HorizontalAlignment="Center">


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="4"
                Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,5,5,5">
                <TextBlock x:Name="textBlock"     Margin="0,10,0,0" TextWrapping="Wrap" Text="Alano Club Graph Sales"  Padding="10"  HorizontalAlignment="Center"  FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="3"  Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,5,5,5">
                <Label Content="Report Start Date: " FontSize="12"    VerticalAlignment="Center" HorizontalAlignment="Center" />
                <DatePicker     
                    SelectedDate="{Binding ReportSDate, StringFormat=MM-dd-yyyy}" 
                    DisplayDateStart="2000-01-01" 
                    DisplayDateEnd="2099-12-31"
                    IsTodayHighlighted="True"
                    FirstDayOfWeek="Monday"
                    Background="Lavender"
BorderBrush="SlateBlue"
BorderThickness="2"  VerticalAlignment="Center" HorizontalAlignment="Center"    />
            </StackPanel>
            <StackPanel Grid.Row="4"  Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Label Content="Report End Date: "  FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <DatePicker  
                    SelectedDate="{Binding ReportEDate, StringFormat=MM-dd-yyyy}" 
                    DisplayDateStart="2000-01-01" 
                    DisplayDateEnd="2099-12-31"
                    IsTodayHighlighted="True"
                    FirstDayOfWeek="Monday"
                    Background="Lavender"
BorderBrush="SlateBlue"
BorderThickness="2" 
                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="5"  Grid.Column="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Button Content="Create Graph"  Command="{Binding CreateGraph}"  Background="Ivory" Margin="5,10,5,5" Cursor="Hand"
            Foreground="Black"  BorderBrush="DarkBlue"  BorderThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <Button Content="Print Graph"  Command="{Binding PrintGraph}"  Background="Ivory" Margin="5,10,5,5" Cursor="Hand"
    Foreground="Black"  BorderBrush="DarkBlue"  BorderThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding IsGraphVisable, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
            <StackPanel Grid.Row="8" Grid.Column="4"   Visibility="{Binding IsGraphVisable, Converter={StaticResource BoolToVisibilityConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ContentControl Content="{Binding PlotControl, Mode=OneTime}" Width="1000" Height="1000" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>

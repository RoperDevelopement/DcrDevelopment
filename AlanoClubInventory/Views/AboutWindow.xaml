<Page x:Class="AlanoClubInventory.Views.AboutWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlanoClubInventory.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutWindow">

    <Grid>
        <Grid Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Product}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Company}" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBlock Text="{Binding CopyRight}" TextWrapping="Wrap" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBlock Text="{Binding Version}" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBlock Text="{Binding FileVersion}" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBlock Text="{Binding InfoVersion}" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                
                <Button Content="Close" Background="DarkSalmon"
Click="Button_Click"                  
  Foreground="Black"  BorderBrush="DarkBlue"  BorderThickness="2" Margin="0,20,0,0" FontSize="10"
       Cursor="Hand"/>

            </StackPanel>
        </Grid>
    </Grid>
</Page>

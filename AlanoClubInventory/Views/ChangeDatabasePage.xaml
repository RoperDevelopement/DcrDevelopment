<Window x:Class="AlanoClubInventory.Views.ChangeDatabasePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlanoClubInventory.Views"
        mc:Ignorable="d"
        Title="ChangeDatabasePage" Height="450" Width="800"
        Background="{StaticResource ControlFillColorDefault}">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DockPanel>
            <Border BorderBrush="DarkSlateGray"  BorderThickness="2" CornerRadius="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TxtChangeDB}" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" TextWrapping="Wrap"></TextBlock>
                    <ComboBox  ItemsSource="{Binding ItemList}"
SelectedItem="{Binding SelectedItem, Mode=TwoWay}" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" IsTextSearchCaseSensitive="True" Width="200" Margin="10" Visibility="{Binding IsBackup, Converter={StaticResource BoolToVisibilityConverter}}" BorderBrush="Yellow" BorderThickness="2">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Label}" FontSize="12" Margin="0,0,10,0" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>

                                </StackPanel>


                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="Exit" Width="100" Margin="10"  Background="Red"  Cursor="Hand"
         Foreground="Black"  BorderBrush="Yellow"  BorderThickness="2" Click="Button_Click" />

                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</Window>

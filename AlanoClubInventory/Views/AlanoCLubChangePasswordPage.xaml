<Page x:Class="AlanoClubInventory.Views.AlanoCLubChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlanoClubInventory.Views"
      mc:Ignorable="d" 
        xmlns:vm="clr-namespace:AlanoClubInventory.Utilites" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="Alano Club Change Password"
  Background="{StaticResource ControlFillColorDefault}">


    <Grid Margin="10,0,10,10" VerticalAlignment="Top"  HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="2" Grid.Row="0"  Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <TextBlock x:Name="textBlock"     Margin="0,10,0,0" TextWrapping="Wrap" Text="Alano Club Inventory Change Password"  Padding="10"  HorizontalAlignment="Center"  FontSize="14" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Username,StringFormat=UserName: {0}}" FontSize="14"  VerticalAlignment="Center" Margin="0,5,0,5" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding UserEmail,StringFormat=Email: {0}}" FontSize="14"  VerticalAlignment="Center" Margin="0,5,0,5" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding TxtNewPassWord}" FontSize="14"  VerticalAlignment="Center" Margin="0,5,0,5" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <PasswordBox Width="200"  x:Name="PasswordBoxLogin" vm:PasswordBoxHelper.BoundPassword="{Binding UserPassword, Mode=TwoWay}"  PasswordChar="*" />
            <TextBox x:Name="PasswordVisible"
   Width="200"
  
   Visibility="Collapsed"
           TextChanged="PasswordVisible_TextChanged"
  />
            <CheckBox x:Name="ShowPasswordToggle"
   Content="Show New Password"
   VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,5,0,5"
           Checked="ShowPasswordToggle_Checked"
   Unchecked="ShowPasswordToggle_Unchecked"
           FontSize="12"

 />
            <TextBlock Text="Verify PassWord" FontSize="14"  VerticalAlignment="Center" Margin="0,5,0,5" HorizontalAlignment="Center"/>
            <PasswordBox Width="200"  x:Name="VerifyPasswordNew" vm:PasswordBoxHelper.BoundPassword="{Binding VerifyNewPassword, Mode=TwoWay}"  PasswordChar="*" />
            <TextBox x:Name="VerifyPasswordNewVisible"
   Width="200"
  
   Visibility="Collapsed"    TextChanged="PasswordVefy_TextChanged"
           
  />
            <CheckBox x:Name="ShowNewPasswordToggle"
   Content="Show Verify Password"
   VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,5,0,5"
           Checked="ShowNewPasswordToggle_Checked"
   Unchecked="ShowNewPasswordToggle_Unchecked"
           FontSize="12"

 />


        </StackPanel>
        <StackPanel  Grid.Row="4" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="UpDate Password"   Background="Ivory" Margin="5,10,5,5" Cursor="Hand"
    Foreground="Black"  BorderBrush="DarkBlue"  BorderThickness="2" VerticalAlignment="Center" 
    HorizontalAlignment="Center" Command="{Binding UpdatePassword}"  Width="150"/>

        

        <Button Content="Cancel"   Background="Ivory" Margin="5,10,5,5" Cursor="Hand"
           Foreground="Black"  BorderBrush="DarkBlue"  BorderThickness="2" VerticalAlignment="Center" 
           HorizontalAlignment="Center" Click="Button_Click" Width="150"/>
        </StackPanel>
    </Grid>
</Page>

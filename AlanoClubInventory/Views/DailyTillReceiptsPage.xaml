<Page x:Class="AlanoClubInventory.Views.DailyTillReceiptsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:ei="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:local="clr-namespace:AlanoClubInventory.Views"
      mc:Ignorable="d" 
        d:DesignHeight="942.105" d:DesignWidth="1157.895"
   Background="{DynamicResource ControlFillColorDefault}"
      
      Title="Daily Till Receipts">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        
        <StackPanel>
            <DockPanel>
                <Menu DockPanel.Dock="Top" Background="{DynamicResource MenuItems}" VerticalAlignment="Center" HorizontalAlignment="Center" >
                   
                        <MenuItem Header="Prices"  Click="Prices"  />
                        <MenuItem Header="Categories"  Click="Categories"  />
                        <MenuItem Header="Inventory"  Click="InventoryPage"  />
                        <MenuItem Header="Other Products"  Click="OtherProd"  />
                        <MenuItem Header="Reports"  Click="Reports"  />
                        <MenuItem Header="Reload Page"  Click="RloadPage"  />
                        <MenuItem Header="Go Back"  Click="GoBack"  />
                   
                </Menu>
            </DockPanel>


            <Grid Margin="10,0,10,10" VerticalAlignment="Top"  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="textBlock" Grid.Column="2" Grid.ColumnSpan="4"  Margin="0,10,0,0" TextWrapping="Wrap" Text="Alano Daily Till Receipts" VerticalAlignment="Top" Padding="10"  HorizontalAlignment="Center" Grid.Row="0"/>
                <DatePicker  Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"
    SelectedDate="{Binding RecepitDate, StringFormat=MM-dd-yyyy}" 
    DisplayDateStart="2000-01-01" 
    DisplayDateEnd="2099-12-31"
    IsTodayHighlighted="True"
    FirstDayOfWeek="Monday"
    Background="Lavender"
    BorderBrush="SlateBlue"
    BorderThickness="2"
                          DateValidationError="DatePickerDateValidationError"
    />
                 
                <ListView x:Name="MyListView" ItemsSource="{Binding TillPrices}" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"  Grid.RowSpan="1" 
                                          ScrollViewer.CanContentScroll="False"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Height="Auto"
ScrollViewer.VerticalScrollBarVisibility="Auto"
ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" >
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate >
                            <Border CornerRadius="8" Margin="5" Padding="10">
                                <StackPanel  Orientation="Horizontal" Margin="5">
                                    
                                    <Label Content="{Binding ProductName}" FontWeight="Bold" FontSize="12"   Margin="0,0,10,0" Width="100"/>
                                    
                                    <Label Content="Total Sold Member " FontWeight="Bold" FontSize="12"  Margin="0,0,10,0" />
                                    <TextBox x:Name="TotalMemberSold" Text="{Binding TotalMemberSold}"  FontSize="12"  Margin="0,0,10,0" Width="50" LostFocus="TextBox_LostFocus" Background="SeaShell" GotFocus="TotalMemberSold_GotFocus" />

                                    <Label Content="Member Price" FontWeight="Bold" FontSize="12"  Margin="0,0,10,0" />

                                    <TextBox x:Name="MemPrice" Text="{Binding ClubPrice}" TextWrapping="Wrap" FontSize="12"  Margin="0,0,10,0" Width="50" LostFocus="TextBox_LostFocus" Background="SeaShell" GotFocus="TotalMemberSold_GotFocus" />

                                    <Label Content="Total Sold Non Member" FontWeight="Bold" FontSize="12"  Margin="0,0,10,0"/>
                                    <TextBox Text="{Binding TotalNonMemberSold}"  FontSize="12" Margin="0,0,10,0" Width="50" 
                                             LostFocus="TextBox_LostFocus" Background="SeaShell" GotFocus="TotalMemberSold_GotFocus"  />

                                    <Label Content="Non Member Price" FontWeight="Bold" FontSize="12"  Margin="0,0,10,0" />
                                    <TextBox Text="{Binding ClubNonMemberPrice}" TextWrapping="Wrap" FontSize="14"  Margin="0,0,10,0" Width="50" LostFocus="TextBox_LostFocus" Background="SeaShell" GotFocus="TotalMemberSold_GotFocus" />

                                    <Label Content="Daily Recepit Total" FontWeight="Bold" FontSize="12"  Margin="0,0,10,0"/>
                                    <TextBox Text="{Binding DailyProductTotal,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,PresentationTraceSources.TraceLevel=High}" TextWrapping="Wrap" FontSize="14"  Margin="0,0,10,0" IsEnabled="False" IsReadOnly="True" Width="50"  >

                                    </TextBox>


                                </StackPanel>



                            </Border>

                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

                <Label Content="Tape Total:" Grid.Column="2" VerticalAlignment="Center" Grid.Row="5" Margin="5,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" Width="150" />
                <TextBox Text="{Binding TotalSales, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,PresentationTraceSources.TraceLevel=High}" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5" VerticalAlignment="Center" Margin="0,0,0,0"  HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" IsEnabled="False" />

                <Label Content="Cash Droped:" Grid.Row="6" Grid.Column="2" VerticalAlignment="Center"  Margin="5,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" Width="100" />
                <TextBox  Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding TotalTillReceipts, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,PresentationTraceSources.TraceLevel=High}"  VerticalAlignment="Center" Margin="0,0,0,0"  HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" IsEnabled="True" GotFocus="TotalMemberSold_GotFocus" LostFocus="TillReciptsLF"/>

                <Label Content="Over Short Total:" Grid.Row="7" Grid.Column="2" VerticalAlignment="Center"  Margin="0,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" Width="150" />

                <TextBox x:Name="TShort" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2"  Text="{Binding TillOverShort, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  VerticalAlignment="Center"   Margin="0,0,0,0" Foreground="Black"   HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" IsEnabled="False"   />

                <Label Grid.Row="8" Grid.Column="2" Content="Club Depsoit:"  VerticalAlignment="Center"  Margin="0,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" Width="150"  />

                <TextBox Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding ClubDeposit, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  VerticalAlignment="Center"   Margin="0,0,0,0" Foreground="Black"   HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" IsEnabled="True"  GotFocus="TotalMemberSold_GotFocus"  LostFocus="DepsopitLostFocous"/>

                <Button Grid.Row="11" Grid.ColumnSpan="2" Content="Add Receipts"  Command="{Binding UpdateTillReceiptsCommand}" CommandParameter="{Binding ElementName=MyListView}"  Margin="0,0,5,0"   Grid.Column="2"  HorizontalAlignment="Center" VerticalAlignment="Center" Background="DeepSkyBlue"  Foreground="White" BorderBrush="DarkBlue"  BorderThickness="2"
                Cursor="Hand"/>



            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>

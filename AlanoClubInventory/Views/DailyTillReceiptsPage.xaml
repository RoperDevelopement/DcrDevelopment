<Page x:Class="AlanoClubInventory.Views.DailyTillReceiptsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:ei="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:local="clr-namespace:AlanoClubInventory.Views"
      mc:Ignorable="d" 
        d:DesignHeight="942.105" d:DesignWidth="1157.895"
   Background="{DynamicResource ControlFillColorDefault}"
      
      Title="Daily Till Receipts">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalAlignment="Top" HorizontalAlignment="Center">
        
      
           



            <Grid Margin="10,0,10,10" VerticalAlignment="Top"  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" >
                    <DockPanel Background="{DynamicResource MenuItems}"  Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Menu BorderBrush="DarkBlue" >

                        <MenuItem Header="Prices"  Click="Prices" FontSize="12">
                            <MenuItem Header="Club Prices"  Click="Prices" FontSize="12" Cursor="Hand"/>
                        </MenuItem>
                        <MenuItem Header="Inventory"   FontSize="12">
                            <MenuItem Header="Bar Items"  Click="InventoryPage" Cursor="Hand"/>
                            <MenuItem Header="UpDate Inventory"  Click="UpDateInventory" Cursor="Hand"/>
                            <MenuItem Header="Other Products"  Click="OtherProd" FontSize="12" Cursor="Hand"/>
                            <MenuItem Header="Categories"  Click="Categories" FontSize="12" Cursor="Hand" />
                        </MenuItem>
                        <MenuItem Header="Prices">
                            <MenuItem Header="Club Prices" Click="AddEditProductPrices" Cursor="Hand"/>
                            <MenuItem Header="Receipts"  Click="DailyRecpts" Cursor="Hand"/>
                        </MenuItem>
                        <MenuItem Header="Till"  Click="Till"  FontSize="12" Cursor="Hand">
                            <MenuItem Header="Reload Page" Click="Till" FontSize="12" Cursor="Hand"/>
                        </MenuItem>
                        <MenuItem Header="Reports"    FontSize="12">
                            <MenuItem Header="Stwert Reports"  Click="Reports"  FontSize="12"/>
                        </MenuItem>

                        <MenuItem Header="Go Back"  Click="GoBack"  FontSize="12"/>
                    </Menu>

                </DockPanel>

               
            </StackPanel>
            <TextBlock x:Name="textBlock"   Margin="0,10,0,0" TextWrapping="Wrap" Text="Alano Daily Till Receipts" VerticalAlignment="Center" Padding="10"  HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" />
            <ComboBox  ItemsSource="{Binding OldRecList}"
 SelectedItem="{Binding  SelectedItemDate, Mode=TwoWay}" Visibility="{Binding IsOldRec, Converter={StaticResource BoolToVisibilityConverter}}" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Visibility="{Binding IsOldRec, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding Label }" FontSize="15" Margin="0,0,10,0" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <DatePicker  Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"
    SelectedDate="{Binding RecepitDate, StringFormat=MM-dd-yyyy}" 
    DisplayDateStart="2000-01-01" 
    DisplayDateEnd="2099-12-31"
    IsTodayHighlighted="True"
    FirstDayOfWeek="Monday"
    Background="Lavender"
    BorderBrush="SlateBlue"
    BorderThickness="2"
                          DateValidationError="DatePickerDateValidationError"
                         Visibility="{Binding IsCurrentRec, Converter={StaticResource BoolToVisibilityConverter}}"
    />
            <ProgressBar Minimum="0" Maximum="100" Height="30" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center"
Value="{Binding Progress.ProgressValue, Mode=OneWay}" Visibility="{Binding IsProgressBar, Converter={StaticResource BoolToVisibilityConverter}}" Width="500" Grid.Row="0" Grid.Column="1" />
            <ListView x:Name="MyListView" ItemsSource="{Binding TillPrices}" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"  Grid.RowSpan="1" 
                                          ScrollViewer.CanContentScroll="False"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Height="Auto"
ScrollViewer.VerticalScrollBarVisibility="Auto"
ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectedItem="{Binding SelectedItem, Mode=TwoWay}"   Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate >
                            <Border CornerRadius="8" Margin="5" Padding="10">
                                <StackPanel  Orientation="Horizontal" Margin="5">
                                    
                                    <Label Content="{Binding ProductName}" FontWeight="Bold" FontSize="12"   Margin="0,0,10,0" Width="100"/>
                                    
                                    <Label Content="Total Sold Member " FontWeight="Bold" FontSize="12"  Margin="0,0,10,0" />
                                    <TextBox x:Name="TotalMemberSold" Text="{Binding TotalMemberSold}"  FontSize="12"  Margin="0,0,10,0" Width="50" LostFocus="TextBox_LostFocus" Background="SeaShell" GotFocus="TotalMemberSold_GotFocus" />

                                    <Label Content="Member Price" FontWeight="Bold" FontSize="12"  Margin="0,0,10,0" />

                                    <TextBox x:Name="MemPrice" Text="{Binding ClubPrice}" TextWrapping="Wrap" FontSize="12"  Margin="0,0,10,0" Width="50" LostFocus="TextBox_LostFocus" Background="SeaShell" GotFocus="TotalMemberSold_GotFocus" />

                                    <Label Content="Total Sold Non Member" FontWeight="Bold" FontSize="12"  Margin="0,0,10,0"/>
                                    <TextBox Text="{Binding TotalNonMemberSold}"  FontSize="12" Margin="0,0,10,0" Width="50" 
                                             LostFocus="TextBox_LostFocus" Background="SeaShell" GotFocus="TotalMemberSold_GotFocus"  />

                                    <Label Content="Non Member Price" FontWeight="Bold" FontSize="12"  Margin="0,0,10,0" />
                                    <TextBox Text="{Binding ClubNonMemberPrice}" TextWrapping="Wrap" FontSize="14"  Margin="0,0,10,0" Width="50" LostFocus="TextBox_LostFocus" Background="SeaShell" GotFocus="TotalMemberSold_GotFocus" />

                                    <Label Content="Daily Recepit Total" FontWeight="Bold" FontSize="12"  Margin="0,0,10,0"/>
                                    <TextBox Text="{Binding DailyProductTotal,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,PresentationTraceSources.TraceLevel=High}" TextWrapping="Wrap" FontSize="14"  Margin="0,0,10,0" IsEnabled="False" IsReadOnly="True" Width="50"  >

                                    </TextBox>


                                </StackPanel>



                            </Border>

                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            <Label Content="Tape Total:" Grid.Column="2" VerticalAlignment="Center" Grid.Row="5" Margin="5,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" Width="150" Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}" />
                <TextBox Text="{Binding TotalSales, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,PresentationTraceSources.TraceLevel=High}" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5" VerticalAlignment="Center" Margin="0,0,0,0"  HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" IsEnabled="False" 
                         Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Label Content="Cash Droped:" Grid.Row="6" Grid.Column="2" VerticalAlignment="Center"  Margin="5,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" Width="100" Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <TextBox  Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding TotalTillReceipts, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,PresentationTraceSources.TraceLevel=High}"  VerticalAlignment="Center" Margin="0,0,0,0"  HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" IsEnabled="True" GotFocus="TotalMemberSold_GotFocus" LostFocus="TillReciptsLF" Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Label Content="Over Short Total:" Grid.Row="7" Grid.Column="2" VerticalAlignment="Center"  Margin="0,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" Width="150" Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <TextBox x:Name="TShort" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2"  Text="{Binding TillOverShort, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  VerticalAlignment="Center"   Margin="0,0,0,0" Foreground="Black"   HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" IsEnabled="False"   
                         Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Label Grid.Row="8" Grid.Column="2" Content="Club Depsoit:"  VerticalAlignment="Center"  Margin="0,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" Width="150"  Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <TextBox Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding ClubDeposit, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  VerticalAlignment="Center"   Margin="0,0,0,0" Foreground="Black"   HorizontalAlignment="Right" FontWeight="Bold" FontSize="14" IsEnabled="True"  GotFocus="TotalMemberSold_GotFocus"  LostFocus="DepsopitLostFocous" Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <StackPanel Grid.Row="11" Grid.Column="3" Orientation="Horizontal">
            <Button  Content="Add Receipts"  Command="{Binding UpdateTillReceiptsCommand}" CommandParameter="{Binding ElementName=MyListView}"  Margin="0,0,5,0"   Grid.Column="2"  HorizontalAlignment="Center" VerticalAlignment="Center" Background="DeepSkyBlue"  Foreground="White" BorderBrush="DarkBlue"  BorderThickness="2"
                Cursor="Hand" Visibility="{Binding IsButtonVis, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Button Content="{Binding TxtOldNewRec}"    Margin="5,0,5,0"    HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red"  Foreground="White" BorderBrush="Tomato"  BorderThickness="2" Command="{Binding OldTillReceiptsCommand}"
  Cursor="Hand" Visibility="{Binding IsButtonVis, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>


        </Grid>
         
    </ScrollViewer>
</Page>

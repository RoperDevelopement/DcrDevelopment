@page
@model EDocs.Nyp.LabReqs.AppServices.LookUpInvoiceViewModel
@{
    ViewData["Title"] = "LookUpInvoiceView";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div id="headingSessionExp" style="display:none">
    <h3 class="text-center text-danger border">Your Session will expire in&nbsp;<span id="seconds"></span>&nbsp;seconds.<br /></h3>
</div>
@*
    <partial name="Shared/_RecordsNetImage" />
    *@
    <div id="divMain" name="divMain">
        <h1 class="text-center">Invoices</h1>
        <p class="p-1" />


        <div class="container-fluid" style="background-color:white;">
            <p class="p-2" />
            <a href="#searchOptions" name="sOptions" id="sOptions" class=" btn btn-primary text-center" data-toggle="collapse" onmouseout="document.getElementById('showmess').style.display = 'none'" onmouseover="document.getElementById('showmess').style.display = 'block'">Search Options</a>
            <p class="alert-light" id="showmess" style="display:none">Click to expand/hide Search Options</p>

            <input type="hidden" id="partsearch" name="partsearch" value="" />
            <div id="searchOptions" class="collapse">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">Date of Service - Scan Begin Date</th>
                            <th class="text-center">Date of Service - Scan End Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center"><input type="date" id="searchStartDate" name="searchStartDate" value="@Model.StartDate" /></td>
                            <td class="text-center"><input type="date" id="searchEndDate" name="searchEndDate" value="@Model.EndDate" /></td>


                        </tr>
                    </tbody>

                </table>
                <div id="checkboxSearchDates" style="display:none">
                    <input type="hidden" id="searchBydate" name="searchBydate" />
                    <div class="row alert-info">
                        <div class="col-2">
                            <p>Search By</p>
                        </div>
                        <div class="col-3">
                            <input type="radio" name="lDate" id="lDate" />&nbsp;Date Of Service

                        </div>
                        <div class="col-2">
                            <input type="radio" id="sDate" name="sDate" value="SDate" />&nbsp;Scan Date
                        </div>
                    </div>
                    <p class="p-0"></p>
                </div>
                <form id="searchInvoices">
                    <div class="row text-center" style="display:block">
                        <p class="text-danger" id="perfLabumberBlank" name="perfLabumberBlank" style="display:none">* Need performing lab</p>
                        <div class="col">
                            @Html.LabelFor(m => m.ModelInvoice.Department, new { @class = "align-middle" })&nbsp;
                            @if (@Model.InvoiceDep != null)
                            {
                                <select id="selInvDep">
                                    <option></option>
                                    @foreach (string depInv in Model.InvoiceDep)
                                    {
                                        <option value="@depInv">@depInv</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <p class="text-info"> No Departments found</p>
                            }
                        </div>
                    </div>
                    <p class="p-0" />
                    <div class="row text-center" style="display:block">
                        <div class="col">
                            @Html.LabelFor(m => m.ModelInvoice.Category, new { @class = "align-middle" })&nbsp;
                            @if (@Model.InvoiceCat != null)
                            {


                                <select id="selInvCat">
                                    <option></option>
                                    @foreach (string catInv in Model.InvoiceCat)
                                    {
                                        <option value="@catInv">@catInv</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <p class="text-info"> No Categories found</p>
                            }
                        </div>
                    </div>
                    <p class="p-0"></p>
                    <div class="row text-center" style="display:block">
                        <p class="text-danger" id="perfLabumberBlank" name="perfLabumberBlank" style="display:none">* Need performing lab</p>
                        @Html.LabelFor(m => m.ModelInvoice.Account, new { @class = "align-middle" })&nbsp;
                        @if (@Model.InvoiceAccount != null)
                        {


                            <select id="selInvAcct">
                                <option></option>
                                @foreach (string acctInv in Model.InvoiceAccount)
                                {
                                    <option value="@acctInv">@acctInv</option>
                                }
                            </select>
                        }
                        else
                        {
                            <p class="text-info"> No Accounts found</p>
                        }
                    </div>

                    <p class="p-0"></p>
                    <div class="row text-center" style="display:block">
                        <div class="col">
                            @Html.LabelFor(m => m.ModelInvoice.Reference, new { @class = "align-middle" })&nbsp;

                            @Html.TextAreaFor(m => m.ModelInvoice.Reference, new { @maxlength = "16", @rows = "1", @cols = "40", @class = "align-middle border", @placeholder = "Invoice Reference Not Required " })
                        </div>
                    </div>
                    <p class="p-0" />
                    <div class="row text-center" style="display:block">
                        <div class="col">
                            @Html.LabelFor(m => m.ModelInvoice.ScanOperator, new { @class = "align-middle" })&nbsp;

                            @Html.TextAreaFor(m => m.ModelInvoice.ScanOperator, new { @maxlength = "16", @rows = "1", @cols = "40", @class = "align-middle border", @placeholder = "Scan Operator Not Required " })
                        </div>
                    </div>
                    <p class="p-0"></p>

                    <div class="row text-left">
                        <div class="col">
                            @Html.CheckBoxFor(m => m.ModelInvoice.SearchPartial)
                            @Html.LabelFor(m => m.ModelInvoice.SearchPartial)
                        </div>
                    </div>

                </form>
                <p class="p-0" />
                <div class="row">

                    <div class="col" id="colPerLab">
                        <button type="button" class="btn btn-outline-dark btn-block" id="btnSearchInv" name="btnSearchInv">Lookup Invoices</button>
                    </div>
                    <div class="col" ">
                        <a class="btn btn-outline-warning btn-block btn-link" id="btnReset" href="/LabReqs/LookUpInvoiceView" name="btnReset" role="button">Reset</a>

                    </div>
                    <div class="col" ">
                        <a class="btn btn-outline-danger btn-block btn-link" id="btnexit" href="/Index" name="btnexit" role="button">Exit</a>

                    </div>

                </div>
                <p class="p-2"></p>
            </div>@*end search options*@
    </div>

</div>
@if ((@Model.IDicInvoiceModel != null))
{
    <div id="divLabReqs" class="container-fluid">
        <p class="text-left">Total Query Time @Model.TotalQueryTime</p>
        <p class="p-0" />
        <table class="table table-hover w-auto" width="100%" id="dtLabReqs">
            <thead>
                <tr>
                    <th>File URL</th>
                    <th>Department</th>
                    <th>Category</th>
                    <th>Account</th>
                    <th>Reference</th>
                    <th>Invoice Date</th>
                    <th>Scan Date</th>
                    <th>Scan Operator</th>
                    <th>Scan Batch ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model.IDicInvoiceModel)
                {

                    <tr>

                        <td> <a href="/Partial_Pages/DisplayPdfFilePartialView?pdfurl=@items.Value.FileUrl" target="_blank"><img src="~/Images/small_export-to-pdf-icon-pdf-export-toolbar-icon.png" width="20" height="25" /></a></td>
                        <td>@items.Value.Department</td>
                        <td>@items.Value.Category</td>
                        <td>@items.Value.Account</td>
                        <td>@items.Value.Reference</td>
                        <td>@items.Value.InvoiceDate.ToString("MM/dd/yyyy")</td>
                        <td>@items.Value.ScanDate</td>
                        <td>@items.Value.ScanOperator</td>
                        <td>@items.Value.ScanBatch</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}

<div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
    opacity: .8; filter: alpha(opacity=70);display:none">
    <p id="parLoading" style="position: absolute; top: 30%; left: 45%; color: White;">
        Getting data, please wait...<img src="~/Images/ajax-loading.gif">
    </p>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            SessionExpireAlert(0);
            $(this).bind("contextmenu", function (e) {

                e.preventDefault();

            });
            if ($('#searchStartDate').val() != '') {
                $('#checkboxSearchDates').css("display", "block");
                $("#searchBydate").val('searchByLogDate');
                $('#lDate').prop('checked', true);
                $('#sDate').prop('checked', false);
                //   $('#btnlookUpByDateofService').css("display", "block");
            }
            $("#divLoading").hide();
            CompleteAjaxCall();
            $('#searchStartDate').change(function () {

                if ($('#searchEndDate').val() == '') {


                    $('#checkboxSearchDates').css("display", "block");
                    $("#searchBydate").val('searchByLogDate');

                    //$("#searchBydate").val('searchByLogDate');
                    $("#lDate").prop('checked', true);
                    $('#colPerLab').css("display", "block");

                }
                GetSearchStartEndDate();

            });
            $('#lDate').change(function () {
                $("#searchBydate").val('searchByLogDate');
                $('#sDate').prop('checked', false);

            });
            $('#sDate').change(function () {
                $("#lDate").prop('checked', false);
                $("#searchBydate").val('scanDate');

            });

            $(document).keypress(function (e) {
                if (e.which == 13) {

                    $('#btnSearchInv').click();
                    return false;

                }



                return true;
            });

            $('#searchEndDate').change(function () {

                if ($('#searchStartDate').val() == '') {


                    $('#checkboxSearchDates').css("display", "block");
                    $("#searchBydate").val('searchByLogDate');

                    //$("#searchBydate").val('searchByLogDate');
                    $("#lDate").prop('checked', true);
                    $('#colPerLab').css("display", "block");

                }
                CheckSearchStartDate();

            });
            $('#btnSearchInv').click(function () {
                var message = "Looking up Invoices ";
                ShowLoadingDialog(message);
                $("<input type='hidden'/>")
                    .attr("value", $('#searchStartDate').val())
                    .attr("id", "startSDate")
                    .attr("name", "startSDate")
                    .prependTo("#searchInvoices");
                $("<input type='hidden'/>")
                    .attr("value", $('#searchEndDate').val())
                    .attr("id", "endSDate")
                    .attr("name", "endSDate")
                    .prependTo("#searchInvoices");

                $("<input type='hidden'/>")
                    .attr('value', $("#searchBydate").val())
                    .attr("id", "searchby")
                    .attr("name", "searchby")
                    .prependTo("#searchInvoices");
                $("<input type='hidden'/>")
                    .attr("value", $('#selInvDep').val())
                    .attr("id", "invDep")
                    .attr("name", "invDep")
                    .prependTo("#searchInvoices");
                $("<input type='hidden'/>")
                    .attr("value", $('#selInvCat').val())
                    .attr("id", "invCat")
                    .attr("name", "invCat")
                    .prependTo("#searchInvoices");
                $("<input type='hidden'/>")
                    .attr("value", $('#selInvAcct').val())
                    .attr("id", "invAcct")
                    .attr("name", "invAcct")
                    .prependTo("#searchInvoices");

                $("#searchInvoices").submit();
            });
        });
    </script>
}

@section scripts{
    <script>
        $(document).ready(function () {
            SessionExpireAlert(0);
            $(this).bind("contextmenu", function (e) {

                e.preventDefault();

            });
            if ($('#searchStartDate').val() != '') {
                $('#checkboxSearchDates').css("display", "block");
                $("#searchBydate").val('searchByLogDate');
                $('#lDate').prop('checked', true);
                $('#sDate').prop('checked', false);
                $('#btnlookUpByDateofService').css("display", "block");
            }

            $("#divLoading").hide();
            CompleteAjaxCall();
            //search by perf lab
            $('#btnPatName').click(function () {
                $("#divMain").fadeOut(100);
                $('#myModalPatName').css("display", "block");
            });
            $('#btnclosePatName').click(function () {

                $("#divMain").fadeIn(100);
                $('#myModalPatName').css("display", "none");
                //  $("#divLoading").css("display", "none");
            });


            $('#btnsearchPatName').click(function () {
                //if ($('#selPerLab').val() == undefined) {
                //    ShowHideDialog("perfLabumberBlank");
                //    $('#perfLabumberBlank').text = '* Need Performing lab';
                //    return false;
                //}
                //if (CheckEmptyStr($('#selPerLab').val())) {

                //    ShowHideDialog("perfLabumberBlank");
                //    $('#perfLabumberBlank').text = '* Need Performing lab';
                //    return false;
                //}
                if (CheckEmptyStr($("#DohModel_FirstName").val(), $("#DohModel_LastName").val())) {

                    ShowHideDialog("patientNameBlank");

                    return false;
                }
                var message = "Looking up DOH by Patient Name ";//+ $('#selPerLab').val();
                ShowLoadingDialog(message);
                $('#btnclosePerfLab').click();

                $("<input type='hidden'/>")
                    .attr("value", $('#searchStartDate').val())
                    .attr("id", "startSDate")
                    .attr("name", "startSDate")
                    .prependTo("#searchPatName");
                $("<input type='hidden'/>")
                    .attr("value", $('#searchEndDate').val())
                    .attr("id", "endSDate")
                    .attr("name", "endSDate")
                    .prependTo("#searchPatName");

                $("<input type='hidden'/>")
                    .attr('value', $("#searchBydate").val())
                    .attr("id", "searchby")
                    .attr("name", "searchby")
                    .prependTo("#searchPatName");

                $("<input type='hidden' value='searchbyPatientName' />")
                    .attr("id", "searchDohby")
                    .attr("name", "searchDohby")
                    .prependTo("#searchPatName");
                $("#searchPatName").submit();

                //  $('#btnCloseFromYear').click();
            });


            //search by ass mrn num lab
            $('#btnAccMRN').click(function () {
                $("#divMain").fadeOut(100);
                $('#myModalAssMRNNum').css("display", "block");
            });
            $('#btncloseAssMRNNum').click(function () {

                $("#divMain").fadeIn(100);
                $('#myModalAssMRNNum').css("display", "none");
                //  $("#divLoading").css("display", "none");
            });

            $('#btnsearchAssMRNNum').click(function () {

                //   var elmsaccnum = document.querySelectorAll("[id='DohModel_AccessionNumber']");
                /// var elmsreqnum = document.querySelectorAll("[id='DohModel_MRN']");
                var elmsaccnum = $("#DohModel_AccessionNumber").val();
                var elmsreqnum = $("#DohModel_MRN").val();
                if (CheckEmptyStr(elmsaccnum, elmsreqnum)) {

                    ShowHideDialog("accessionnumberBlank");
                    ShowHideDialog("reqnumberBlank");
                    return false;
                }
                var message = "Looking up DOH by Accession Number " + elmsaccnum + " or Medical Record Nuumber " + elmsreqnum;
                ShowLoadingDialog(message);
                $('#btncloseAssMRNNum').click();
                $("<input type='hidden'/>")
                    .attr("value", $('#searchStartDate').val())
                    .attr("id", "startSDate")
                    .attr("name", "startSDate")
                    .prependTo("#searchAssMRNNum");
                $("<input type='hidden'/>")
                    .attr("value", $('#searchEndDate').val())
                    .attr("id", "endSDate")
                    .attr("name", "endSDate")
                    .prependTo("#searchAssMRNNum");

                $("<input type='hidden'/>")
                    .attr('value', $("#searchBydate").val())
                    .attr("id", "searchby")
                    .attr("name", "searchby")
                    .prependTo("#searchAssMRNNum");
                $("<input type='hidden' value='searchbyAccessMrnNum' />")
                    .attr("id", "searchDohby")
                    .attr("name", "searchDohby")
                    .prependTo("#searchAssMRNNum");

                $('#searchAssMRNNum').submit();
                //  $('#btnCloseFromYear').click();
            });

            //search by scan operator
            $('#btndrName').click(function () {
                $("#divMain").fadeOut(100);
                $('#myModalDrName').css("display", "block");
            });
            $('#btncloseDrName').click(function () {

                $("#divMain").fadeIn(100);
                $('#myModalDrName').css("display", "none");
                $("#divLoading").css("display", "none");
            });

            $('#btnsearchDrName').click(function () {
                if (CheckEmptyStr($("#DohModel_DrFName").val(), $("#DohModel_DrLName").val())) {

                    ShowHideDialog("drNameBlank");

                    return false;
                }
                var message = "Looking up DOH by Doctor Name " + $('#DohModel_ScanOperator').val();
                ShowLoadingDialog(message);
                $('#btncloseScanOper').click();
                $("<input type='hidden'/>")
                    .attr("value", $('#searchStartDate').val())
                    .attr("id", "startSDate")
                    .attr("name", "startSDate")
                    .prependTo("#searchDrName");
                $("<input type='hidden'/>")
                    .attr("value", $('#searchEndDate').val())
                    .attr("id", "endSDate")
                    .attr("name", "endSDate")
                    .prependTo("#searchDrName");

                $("<input type='hidden'/>")
                    .attr('value', $("#searchBydate").val())
                    .attr("id", "searchby")
                    .attr("name", "searchby")
                    .prependTo("#searchDrName");
                $("<input type='hidden' value='searchbyDrName' />")
                    .attr("id", "searchDohby")
                    .attr("name", "searchDohby")
                    .prependTo("#searchDrName");
                $("#searchDrName").submit();
                //  $('#btnCloseFromYear').click();
            });


            $('#searchStartDate').change(function () {

                if ($('#searchEndDate').val() == '') {


                    $('#checkboxSearchDates').css("display", "block");
                    $("#searchBydate").val('searchByLogDate');

                    //$("#searchBydate").val('searchByLogDate');
                    $("#lDate").prop('checked', true);
                    $('#colPerLab').css("display", "block");

                }
                GetSearchStartEndDate();

            });

            $('#lDate').change(function () {
                $("#searchBydate").val('searchByLogDate');
                $('#sDate').prop('checked', false);

            });
            $('#sDate').change(function () {
                $("#lDate").prop('checked', false);
                $("#searchBydate").val('scanDate');

            });
            $('#searchEndDate').change(function () {

                if ($('#searchStartDate').val() == '') {


                    $('#checkboxSearchDates').css("display", "block");
                    $("#searchBydate").val('searchByLogDate');

                    //$("#searchBydate").val('searchByLogDate');
                    $("#lDate").prop('checked', true);
                    $('#colPerLab').css("display", "block");

                }
                CheckSearchStartDate();

            });


            $(document).keypress(function (e) {
                if (e.which == 13) {

                    if ($('#myModalPerfLab').is(':visible')) {

                        $('#btnsearchPerfLab').click();
                        return false;

                    }
                    else if ($('#myModalAssMRNNum').is(':visible')) {

                        $('#btnsearchAssMRNNum').click();
                        return false;

                    }
                    else if ($('#myModalScanOper').is(':visible')) {

                        $('#btnsearchScanOper').click();
                        return false;

                    }

                    else {
                        return true;
                    }
                }
                return true;
            });



            $('#btnlookUpByDateofService').click(function () {
                var message = "Looking up Doh by Start Date " + $('#searchStartDate').val() + ' End Date ' + $('#searchEndDate').val();
                ShowLoadingDialog(message);
                $("<input type='hidden'/>")
                    .attr("value", $('#searchStartDate').val())
                    .attr("id", "startSDate")
                    .attr("name", "startSDate")
                    .prependTo("#searchDrName");
                $("<input type='hidden'/>")
                    .attr("value", $('#searchEndDate').val())
                    .attr("id", "endSDate")
                    .attr("name", "endSDate")
                    .prependTo("#searchDrName");
                $("<input type='hidden'/>")
                    .attr("value", $("#searchBydate").val())
                    .attr("id", "searchby")
                    .attr("name", "searchby")
                    .prependTo("#searchDrName");
                $("<input type='hidden' value='searchByLogScanDate' />")
                    .attr("id", "searchDohby")
                    .attr("name", "searchDohby")
                    .prependTo("#searchDrName");
                $("#searchDrName").submit();

            });

        });

    </script>
}
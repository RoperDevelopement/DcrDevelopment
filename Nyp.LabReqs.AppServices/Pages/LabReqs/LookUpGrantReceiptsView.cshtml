@page
@model EDocs.Nyp.LabReqs.AppServices.LookUpGrantReceiptsViewModel

@{
    ViewData["Title"] = "LookUpGrantReceiptsView";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div id="headingSessionExp" style="display:none">
    <h3 class="text-center text-danger border">Your Session will expire in&nbsp;<span id="seconds"></span>&nbsp;seconds.<br /></h3>
</div>
@*
    <partial name="Shared/_RecordsNetImage" />
    *@
    <div id="divMain" name="divMain">
        <h1 class="text-center">Grant Receipts Reqs</h1>
        <p class="p-1" />

        <div style="background-color:white;">
            <div class="container-fluid">
                @Html.ValidationMessage("ErrorMessage", new { @class = "text-danger" })
                <p class="p-2" />
                <a href="#searchOptions" name="sOptions" id="sOptions" class=" btn btn-primary text-center" data-toggle="collapse" onmouseout="document.getElementById('showmess').style.display = 'none'" onmouseover="document.getElementById('showmess').style.display = 'block'">Search Options</a>
                <p class="alert-light" id="showmess" style="display:none">Click to expand/hide Search Options</p>
                <p class="p-1" />

                <div id="searchOptions" class="collapse">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">Grant Receipts Scan Begin Date</th>
                                <th class="text-center">Grant Receipts Scan End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center"><input type="date" id="searchStartDate" name="searchStartDate" value="@Model.StartDate" /></td>
                                <td class="text-center"><input type="date" id="searchEndDate" name="searchEndDate" value="@Model.EndDate" /></td>


                            </tr>
                        </tbody>

                    </table>
                    <p class="p-1" />
                    <div id="checkboxSearchDates" style="display:none">


                        <input type="hidden" id="searchBydate" name="searchBydate" />
                        <div class="row alert-info">
                            <div class="col-2">
                                <p>Search By</p>
                            </div>
                            <div class="col-3">
                                <input type="radio" name="#lDate" id="lDate" />&nbsp;Document Date

                            </div>
                            <div class="col-2">
                                <input type="radio" id="sDate" name="sDate" value="SDate" />&nbsp;Scan Date
                            </div>
                        </div>
                    </div>

                    <div>
                        <form method="get" id="frGranteRec" name="frDrCodes" class="form-horizontal">
                            <div class="row h-100">
                                <div class="col">
                                    @Html.LabelFor(model => model.GrantReceiptsModel.ClientCode, new { @class = "text-nowrap" })<p class="p-0" />
                                    @Html.TextAreaFor(m => m.GrantReceiptsModel.ClientCode, new { @maxlength = "16", @rows = "1", @cols = "30", @class = "text-nowrap border", @placeholder = "Client Code or * All Client Codes" })
                                    @Html.ValidationMessage("ErrorMessage", new { @class = "text-danger" })

                                </div>
                                <div class="col">
                                    @Html.LabelFor(model => model.GrantReceiptsModel.ScanOperator, new { @class = "text-nowrap" })<p class="p-0" />
                                    @Html.TextAreaFor(m => m.GrantReceiptsModel.ScanOperator, new { @maxlength = "25", @rows = "1", @cols = "30", @class = "text-nowrap border", @placeholder = "Scan Operator" })

                                </div>

                            </div>
                            <div class="row">
                                <div class="col">

                                    @Html.CheckBoxFor(m => m.GrantReceiptsModel.SearchPartial)
                                    <label class="text-nowrap">Client Code or Scan Operator Name Starts With</label>
                                </div>
                            </div>
                        </form>

                    </div>
                    <div class="row">
                        <div class="col">
                            <button type="button" class="btn btn-outline-primary btn-block" id="btnGrantReceipts" name="btnGrantReceipts">Look Up Grant Receipts</button>
                        </div>
                        <div class="col" ">
                            <a class="btn btn-outline-warning btn-block btn-link" id="btnReset" href="/LabReqs/LookUpGrantReceiptsView" name="btnReset" role="button">Reset</a>

                        </div>
                        <div class="col" ">
                            <a class="btn btn-outline-danger btn-block btn-link" id="btnexit" href="/Index" name="btnexit" role="button">Exit</a>

                        </div>

                    </div>

                    <p class="p-1" />
                </div>@*end search options*@
        </div>
    </div>
</div>
@if ((@Model.IDicGrantReceiptsModel != null))
{
    <div id="divLabReqs">
        <p class="text-left">Total Query Time @Model.TotalQueryTime</p>
        <p class="p-0" />
        <table class="table table-hover w-auto" width="100%" id="dtLabReqs">
            <thead>
                <tr>
                    <th>File URL</th>
                    <th>Client Code</th>
                    <th>Comments</th>
                    <th>Document Date</th>
                    <th>Scan Operator</th>
                    <th>Scan Date</th>
                    <th>Scan Batch ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model.IDicGrantReceiptsModel)
                {

                    <tr>

                        <td><a href="/Partial_Pages/DisplayPdfFilePartialView?pdfurl=@items.Value.FileUrl" target="_blank"><img src="~/Images/small_export-to-pdf-icon-pdf-export-toolbar-icon.png" width="20" height="25" /></a></td>
                        <td>@items.Value.ClientCode</td>
                        <td>@items.Value.Comments</td>
                        <td>@items.Value.DocumentDate.ToString("MM/dd/yyyy")</td>
                        <td>@items.Value.ScanOperator</td>
                        <td>@items.Value.ScanDate</td>
                        <td>@items.Value.ScanBatchId</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
}

<div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
        top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
        opacity: .8; filter: alpha(opacity=70);display:none">
    <p id="parLoading" style="position: absolute; top: 30%; left: 45%; color: White;">
        Getting data, please wait...<img src="~/Images/ajax-loading.gif">
    </p>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            SessionExpireAlert(0);
            CompleteAjaxCall();
            $(this).bind("contextmenu", function (e) {

                e.preventDefault();

            });

            $("#divLoading").hide();
            $("#searchBydate").val('');

            $('#searchEndDate').change(function () {
                if ($('#searchStartDate').val() == '') {
                    $("#searchBydate").val('searchByLogDate');
                    $("#lDate").prop('checked', true);
                }
                CheckSearchStartDate();

            });
            $('#lDate').change(function () {
                $("#searchBydate").val('searchByLogDate');
                $('#sDate').prop('checked', false);

            });
            $('#sDate').change(function () {
                $("#lDate").prop('checked', false);
                $("#searchBydate").val('searchByScanDate');
            });


            $(document).keypress(function (e) {
                if (e.which == 13) {

                    $('#btnGrantReceipts').click();
                    return false;

                }



                return true;
            });


            $('#searchStartDate').change(function () {

                if ($('#searchEndDate').val() == '') {

                    $("#searchBydate").val('searchByLogDate');

                    //$("#searchBydate").val('searchByLogDate');
                    $("#lDate").prop('checked', true);
                }
                GetSearchStartEndDate();

            });

            $('#btnGrantReceipts').click(function () {

                var message = "Looking up Grante Receipts ";
                ShowLoadingDialog(message);
                $("<input type='hidden'/>")
                    .attr('value', $("#searchBydate").val())
                    .attr("id", "searchby")
                    .attr("name", "searchby")
                    .prependTo("#frGranteRec");
                $("<input type='hidden'/>")
                    .attr("value", $('#searchStartDate').val())
                    .attr("id", "startSDate")
                    .attr("name", "startSDate")
                    .prependTo("#frGranteRec");
                $("<input type='hidden'/>")
                    .attr("value", $('#searchEndDate').val())
                    .attr("id", "endSDate")
                    .attr("name", "endSDate")
                    .prependTo("#frGranteRec");
                $("#frGranteRec").submit();

            });

        });

    </script>
}
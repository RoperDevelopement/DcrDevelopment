@if (((System.Security.Claims.ClaimsIdentity)User.Identity).IsAuthenticated)
{
    @if (User.Identity.Name != null)
    {
        <span class="navbar-text text-info">Hello, @User.Identity.Name!</span>
    }
    else
    {
        <span class="navbar-text">Hello</span>
    }
    <form method="post" class="form-inline" asp-page="/NypUsersInfo/LoginView" asp-page-handler="Logout">
        <button type="submit" class="nav-link btn btn-link text-dark" onmouseover="$(this).css('background','LightGray');" onmouseout="$(this).css('background','white');">Logout</button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    </ul>
}

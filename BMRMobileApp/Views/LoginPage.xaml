<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMRMobileApp.LoginPage"
             Title="Login"
              Shell.FlyoutBehavior="Disabled">
    
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Welcome! Please Log In" 
               FontAutoScalingEnabled="True" 
              VerticalOptions="Center" TextColor="Black" />

            <Entry x:Name="UsernameEntry" 
               Placeholder="Username" 
                   FontAutoScalingEnabled="True"
                   VerticalOptions="Center"
                   Background="White" TextColor="Black"
               Keyboard="Text" IsSpellCheckEnabled="False" />

            <Entry x:Name="PasswordEntry" 
                   FontAutoScalingEnabled="True"
               Placeholder="Password" 
               IsPassword="True" 
                   Background="White" TextColor="Black"/>

            <ImageButton Source="login1.png" 
                Clicked="OnLoginButtonClicked" 
                BackgroundColor="#007AFF" WidthRequest="125" HeightRequest="125"
                         CornerRadius="25"
                         VerticalOptions="Center"
                 />

            <Label x:Name="ErrorMessage" 
               TextColor="Red" 
               IsVisible="False" />
        </VerticalStackLayout>

</ContentPage>
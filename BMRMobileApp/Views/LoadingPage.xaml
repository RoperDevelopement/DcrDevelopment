<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMRMobileApp.LoadingPage"
             Title="LoadingPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="Taking a deep breath together... Your space is almost ready ðŸ’™"
               FontAutoScalingEnabled="True"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0,20,0,0"/>
        <BoxView Grid.Row="1" HeightRequest="20" Color="Transparent" />
        <Image Grid.Row="2" Source="psloadimg.png" WidthRequest="200" HeightRequest="200" HorizontalOptions="Center"  Margin="0,20,0,0"/>
        <ActivityIndicator Grid.Row="3" IsRunning="True" HorizontalOptions="Center"/>
    </Grid>
</ContentPage>